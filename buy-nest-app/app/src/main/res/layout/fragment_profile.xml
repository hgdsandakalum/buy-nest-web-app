<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/profile_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My profile"
        android:textSize="25sp"
        android:textColor="#303030"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matilda Brown"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#303030"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/profile_title"
        app:layout_constraintStart_toStartOf="parent"
         />

    <TextView
        android:id="@+id/profile_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="matildabrown@mail.com"
        android:textSize="16sp"
        android:textColor="#888888"
        app:layout_constraintTop_toBottomOf="@id/profile_name"
        app:layout_constraintStart_toStartOf="@id/profile_name" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:background="#303030"
        app:layout_constraintTop_toBottomOf="@id/profile_email"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Edit Profile"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#303030"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider" />

    <TextView
        android:id="@+id/my_orders_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit your name, mobile and address"
        android:textColor="#888888"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/edit_profile"
        app:layout_constraintTop_toBottomOf="@id/edit_profile" />

    <ImageView
        android:id="@+id/my_orders_arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintTop_toTopOf="@id/edit_profile"
        app:layout_constraintBottom_toBottomOf="@id/my_orders_subtitle"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/my_orders_title2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="My orders"
        android:textColor="#303030"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_orders_subtitle" />

    <TextView
        android:id="@+id/my_orders_subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No orders available"
        android:textColor="#888888"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/my_orders_title2"
        app:layout_constraintTop_toBottomOf="@id/my_orders_title2" />

    <ImageView
        android:id="@+id/my_orders_arrow2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintBottom_toBottomOf="@id/my_orders_subtitle2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/my_orders_title2" />

    <TextView
        android:id="@+id/payment_methods_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Payment methods"
        android:textColor="#303030"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_orders_subtitle2" />

    <TextView
        android:id="@+id/payment_methods_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visa **34"
        android:textColor="#888888"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/payment_methods_title"
        app:layout_constraintTop_toBottomOf="@id/payment_methods_title" />

    <ImageView
        android:id="@+id/payment_methods_arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintTop_toTopOf="@id/payment_methods_title"
        app:layout_constraintBottom_toBottomOf="@id/payment_methods_subtitle"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/my_reviews_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My reviews"
        android:textColor="#303030"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/payment_methods_subtitle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/my_reviews_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No reviews available"
        android:textSize="14sp"
        android:textColor="#888888"
        app:layout_constraintTop_toBottomOf="@id/my_reviews_title"
        app:layout_constraintStart_toStartOf="@id/my_reviews_title" />

    <ImageView
        android:id="@+id/my_reviews_arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintTop_toTopOf="@id/my_reviews_title"
        app:layout_constraintBottom_toBottomOf="@id/my_reviews_subtitle"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#303030"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/my_reviews_subtitle"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/settings_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications, password"
        android:textSize="14sp"
        android:textColor="#888888"
        app:layout_constraintTop_toBottomOf="@id/settings_title"
        app:layout_constraintStart_toStartOf="@id/settings_title" />

    <ImageView
        android:id="@+id/settings_arrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintTop_toTopOf="@id/settings_title"
        app:layout_constraintBottom_toBottomOf="@id/settings_subtitle"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/logout_btn"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="Logout"
        android:backgroundTint="#303030"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>